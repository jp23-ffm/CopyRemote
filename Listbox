<script>
  function toggleListbox() {
    const listbox = document.getElementById('listbox');
    listbox.classList.toggle('hidden');
  }

  function removeItem(button) {
    const item = button.closest('.listbox-item');
    item.remove();
  }

  // Fermer la listbox si on clique ailleurs
  document.addEventListener('click', function(e) {
    const listbox = document.getElementById('listbox');
    const trigger = document.querySelector('.listbox-trigger');
    
    if (!listbox.contains(e.target) && e.target !== trigger) {
      listbox.classList.add('hidden');
    }
  });
</script>

