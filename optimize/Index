cursor.execute("CREATE INDEX IF NOT EXISTS staging_srv_id ON inventory_serverstaging(SERVER_ID);")
        cursor.execute("CREATE INDEX IF NOT EXISTS staging_env ON inventory_serverstaging(PAMELA_ENVIRONMENT);")
        cursor.execute("CREATE INDEX IF NOT EXISTS staging_area ON inventory_serverstaging(PAMELA_AREA);")
        cursor.execute("CREATE INDEX IF NOT EXISTS staging_dc ON inventory_serverstaging(PAMELA_DATACENTER);")
        cursor.execute("CREATE INDEX IF NOT EXISTS staging_status ON inventory_serverstaging(PAMELA_SNOWITG_STATUS);")
        cursor.execute("CREATE INDEX IF NOT EXISTS staging_compound ON inventory_serverstaging(SERVER_ID, APP_NAME_VALUE);")
        
        # Indexes pour ServerGroupSummaryStaging
        cursor.execute("CREATE INDEX IF NOT EXISTS staging_sum_srv ON inventory_servergroupsummarystaging(SERVER_ID);")
        cursor.execute("CREATE INDEX IF NOT EXISTS staging_sum_upd ON inventory_servergroupsummarystaging(last_updated);")
        cursor.execute("CREATE INDEX IF NOT EXISTS staging_sum_inst ON inventory_servergroupsummarystaging(total_instances);")
        cursor.execute("CREATE INDEX IF NOT EXISTS staging_sum_comp ON inventory_servergroupsummarystaging(SERVER_ID, total_instances);")
        
