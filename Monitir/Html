<body>
    <div class="container">
        <header>
            <h1>üñ•Ô∏è Cluster Status</h1>
            <div id="cluster-status-badge"></div>
            <button class="refresh-btn" onclick="loadStatus()">üîÑ Rafra√Æchir</button>
            <label class="auto-refresh">
                <input type="checkbox" id="auto-refresh" checked> 
                Actualisation auto (30s)
            </label>
        </header>
        
        <div id="content">
            <div class="loading">Chargement...</div>
        </div>
    </div>

    <script>
        let autoRefreshInterval = null;

        function loadStatus() {
            fetch('/api/status')
                .then(response => response.json())
                .then(data => {
                    displayStatus(data);
                })
                .catch(error => {
                    document.getElementById('content').innerHTML = `
                        <div class="error-message">
                            ‚ùå Erreur lors du chargement: ${error.message}
                        </div>
                    `;
                });
        }

        function displayStatus(data) {
            const clusterStatus = data.cluster_status || 'Unknown';
            const statusClass = clusterStatus.toLowerCase();
            
            // Cluster status badge
            document.getElementById('cluster-status-badge').innerHTML = `
                <span class="cluster-status status-${statusClass}">
                    ${clusterStatus}
                </span>
            `;
            
            // Build content
            let html = '';
            
            // Summary
            if (data.summary) {
                html += `
                    <div class="summary">
                        <h2>üìä R√©sum√©</h2>
                        <div class="summary-grid">
                            <div class="summary-item">
                                <div class="label">Total Nodes</div>
                                <div class="value">${data.summary.total_nodes || 0}</div>
                            </div>
                            <div class="summary-item">
                                <div class="label">‚úÖ Healthy</div>
                                <div class="value" style="color: #28a745;">${data.summary.healthy_nodes || 0}</div>
                            </div>
                            ${data.summary.stale_nodes > 0 ? `
                                <div class="summary-item">
                                    <div class="label">‚ö†Ô∏è Stale</div>
                                    <div class="value" style="color: #dc3545;">${data.summary.stale_nodes}</div>
                                </div>
                            ` : ''}
                            ${data.summary.error_nodes > 0 ? `
                                <div class="summary-item">
                                    <div class="label">‚ùå Error</div>
                                    <div class="value" style="color: #dc3545;">${data.summary.error_nodes}</div>
                                </div>
                            ` : ''}
                            ${data.summary.warning_nodes > 0 ? `
                                <div class="summary-item">
                                    <div class="label">‚ö†Ô∏è Warning</div>
                                    <div class="value" style="color: #ffc107;">${data.summary.warning_nodes}</div>
                                </div>
                            ` : ''}
                        </div>
                    </div>
                `;
            }
            
            // Issues
            if (data.issues && data.issues.length > 0) {
                html += '<div class="stale-warning">';
                data.issues.forEach(issue => {
                    html += `<strong>‚ö†Ô∏è ${issue.message}</strong><br>`;
                    html += `Nodes affect√©s: ${issue.affected_nodes.join(', ')}<br><br>`;
                });
                html += '</div>';
            }
            
            // Nodes
            if (data.nodes && data.nodes.length > 0) {
                html += '<div class="nodes-grid">';
                
                data.nodes.forEach(node => {
                    const nodeStatus = node.status || 'Unknown';
                    const statusClass = nodeStatus.toLowerCase();
                    const checks = node.checks_summary || {};
                    
                    html += `
                        <div class="node-card">
                            <div class="node-header ${statusClass}">
                                <div class="node-name">${node.node_name}</div>
                                <span class="node-status ${statusClass}">${nodeStatus}</span>
                                ${node.is_stale ? ' <span style="color: #dc3545;">‚ö†Ô∏è Stale</span>' : ''}
                            </div>
                            <div class="node-info">
                                <div class="info-row">
                                    <span class="info-label">Hostname</span>
                                    <span class="info-value">${node.hostname || 'N/A'}</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">IP Address</span>
                                    <span class="info-value">${node.ip_address || 'N/A'}</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Version</span>
                                    <span class="info-value">${node.version || 'N/A'}</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Derni√®re mise √† jour</span>
                                    <span class="info-value">${formatTimestamp(node.last_updated)}</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Anciennet√©</span>
                                    <span class="info-value">${formatStaleness(node.staleness_seconds)}</span>
                                </div>
                                <div class="checks-summary">
                                    ${checks.ok > 0 ? `<span class="check-badge ok">‚úì ${checks.ok} OK</span>` : ''}
                                    ${checks.warning > 0 ? `<span class="check-badge warning">‚ö† ${checks.warning} Warning</span>` : ''}
                                    ${checks.error > 0 ? `<span class="check-badge error">‚úó ${checks.error} Error</span>` : ''}
                                </div>
                            </div>
                        </div>
                    `;
                });
                
                html += '</div>';
            }
            
            // Timestamp
            html += `
                <div class="timestamp">
                    Derni√®re actualisation: ${new Date().toLocaleString('fr-FR')}
                </div>
            `;
            
            document.getElementById('content').innerHTML = html;
        }

        function formatTimestamp(timestamp) {
            if (!timestamp) return 'N/A';
            const date = new Date(timestamp);
            return date.toLocaleString('fr-FR');
        }

        function formatStaleness(seconds) {
            if (!seconds) return 'N/A';
            
            if (seconds < 60) {
                return `${seconds.toFixed(1)}s`;
            } else if (seconds < 3600) {
                return `${(seconds / 60).toFixed(1)} min`;
            } else {
                return `${(seconds / 3600).toFixed(1)} h`;
            }
        }

        function setupAutoRefresh() {
            const checkbox = document.getElementById('auto-refresh');
            
            checkbox.addEventListener('change', function() {
                if (this.checked) {
                    autoRefreshInterval = setInterval(loadStatus, 30000); // 30 secondes
                } else {
                    if (autoRefreshInterval) {
                        clearInterval(autoRefreshInterval);
                        autoRefreshInterval = null;
                    }
                }
            });
            
            // D√©marrer l'auto-refresh si coch√© par d√©faut
            if (checkbox.checked) {
                autoRefreshInterval = setInterval(loadStatus, 30000);
            }
        }

        // Charger au d√©marrage
        loadStatus();
        setupAutoRefresh();
    </script>
</body>
</html>
