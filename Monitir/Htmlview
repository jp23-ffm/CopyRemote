from django.views.generic import TemplateView
from django.contrib.auth.mixins import LoginRequiredMixin  # Optionnel: si tu veux protéger la page


class ClusterStatusPageView(TemplateView):
    """
    Vue pour afficher la page web de monitoring du cluster.
    """
    template_name = 'cluster_status.html'
    
    # Décommente si tu veux que seuls les users connectés puissent y accéder
    # Sinon, la page est publique
    # class ClusterStatusPageView(LoginRequiredMixin, TemplateView):
    #     login_url = '/admin/login/'  # ou ton URL de login


# Si tu veux faire une simple vue fonction (plus simple):
from django.shortcuts import render

def cluster_status_page(request):
    """Vue simple pour afficher la page de monitoring."""
    return render(request, 'cluster_status.html')
