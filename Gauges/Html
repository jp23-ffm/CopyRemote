        <!-- Chart.js Initialization -->
        <script>
            // Fonction pour obtenir la couleur selon la valeur et les seuils
            function getColorForValue(value, thresholds, colors) {
                if (value >= thresholds.good) return colors.good;
                if (value >= thresholds.warning) return colors.warning;
                return colors.critical;
            }
            
            // Fonction pour créer une gauge
            function createGauge(canvasId, value, thresholds, colors, isLarge = false) {
                const ctx = document.getElementById(canvasId).getContext('2d');
                const gaugeColor = getColorForValue(value, thresholds, colors);
                
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        datasets: [{
                            data: [value, 100 - value],
                            backgroundColor: [gaugeColor, 'rgba(128, 128, 128, 0.1)'],
                            borderWidth: 0,
                            circumference: 180,
                            rotation: 270
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        cutout: isLarge ? '75%' : '70%',
                        plugins: {
                            tooltip: { enabled: false },
                            legend: { display: false }
                        }
                    }
                });
            }
            
            // Initialise tous les gauges
            {% for widget in widgets %}
            createGauge(
                'gauge-{{ widget.id }}',
                {{ widget.value }},
                {{ widget.thresholds|safe }},
                {{ widget.colors|safe }},
                {{ widget.size == 'large'|lower }}
            );
            {% endfor %}
        </script>
    {% endif %}
</body>
