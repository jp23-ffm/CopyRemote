<script>
(function() {
    // Stocker toutes les donn√©es des serveurs (grouped data)
    const serversData = {
        {% for server_group in page_obj.object_list %}
            "{{ server_group.hostname }}": {
                {% for field in model_fields %}
                    "{{ field.name }}": {% if field.name in server_group.constant_fields %}"{{ server_group.constant_fields|lookup:field.name|escapejs }}"{% elif field.name in server_group.variable_fields %}{{ server_group.variable_fields|lookup:field.name|safe }}{% else %}null{% endif %}{% if not forloop.last %},{% endif %}
                {% endfor %}
            }{% if not forloop.last %},{% endif %}
        {% endfor %}
    };
    
    // Stocker les donn√©es individuelles des instances (detailed data)
    const instancesData = {
        {% for server_group in page_obj.object_list %}
            {% if server_group.count > 1 %}
                {% for instance in server_group.all_instances %}
                    "{{ server_group.hostname }}_instance_{{ forloop.counter }}": {
                        {% for field in model_fields %}
                            "{{ field.name }}": "{{ instance|lookup:field.name|escapejs }}"{% if not forloop.last %},{% endif %}
                        {% endfor %}
                    }{% if not forloop.last %},{% endif %}
                {% endfor %}{% if not forloop.last %},{% endif %}
            {% endif %}
        {% endfor %}
    };
    
    const fieldLabels = {{ json_data|safe }};
    
    window.openServerModal = function(hostname, instanceNumber = null) {
        const modal = document.getElementById('serverDetailsModal');
        let serverData;
        let modalTitle;
        
        // D√©terminer si c'est une vue group√©e ou d√©taill√©e
        if (instanceNumber !== null) {
            // Vue d√©taill√©e d'une instance sp√©cifique
            const instanceKey = `${hostname}_instance_${instanceNumber}`;
            serverData = instancesData[instanceKey];
            modalTitle = `Server Details: ${hostname} - Instance ${instanceNumber}`;
        } else {
            // Vue group√©e
            serverData = serversData[hostname];
            modalTitle = `Server Details: ${hostname}`;
        }
        
        if (!serverData) {
            console.error('No data found for:', hostname, instanceNumber);
            return;
        }
        
        // Mettre √† jour le titre avec badge si c'est une instance
        let titleHTML = `Server Details: <strong>${hostname}</strong>`;
        if (instanceNumber !== null) {
            titleHTML += ` <span class="modal-instance-badge">Instance ${instanceNumber}</span>`;
        }
        document.getElementById('modalServerTitle').innerHTML = titleHTML;
        
        // Construire le contenu
        let html = '<div class="server-details-grid">';
        
        // Organiser les champs par cat√©gories
        const categories = {};
        
        for (const [fieldKey, fieldValue] of Object.entries(serverData)) {
            const fieldInfo = fieldLabels.fields[fieldKey];
            if (!fieldInfo) continue;
            
            const category = fieldInfo.category || 'Other';
            if (!categories[category]) {
                categories[category] = [];
            }
            
            categories[category].push({
                label: fieldInfo.displayname,
                value: fieldValue,
                key: fieldKey
            });
        }
        
        // G√©n√©rer le HTML pour chaque cat√©gorie
        for (const [categoryName, fields] of Object.entries(categories)) {
            html += `<div class="detail-category">`;
            html += `<h3>${categoryName}</h3>`;
            
            for (const field of fields) {
                let displayValue = field.value;
                let valueClass = '';
                
                // G√©rer les objets (comme les variable_fields en mode group√©)
                if (typeof displayValue === 'object' && displayValue !== null) {
                    if (displayValue.preview) {
                        displayValue = displayValue.preview;
                        valueClass = 'variable';
                    } else {
                        displayValue = JSON.stringify(displayValue);
                    }
                }
                
                displayValue = displayValue && displayValue !== '' && displayValue !== 'null' ? displayValue : '--';
                if (displayValue === '--') {
                    valueClass = 'empty';
                }
                
                html += `<div class="detail-row">`;
                html += `<span class="detail-label">${field.label}:</span>`;
                html += `<span class="detail-value ${valueClass}">${displayValue}</span>`;
                html += `</div>`;
            }
            
            html += `</div>`;
        }
        
        html += '</div>';
        
        document.getElementById('modalServerDetails').innerHTML = html;
        modal.style.display = 'block';
    };
    
    window.closeServerModal = function() {
        document.getElementById('serverDetailsModal').style.display = 'none';
    };
    
    // Fermer le modal en cliquant sur l'overlay
    document.addEventListener('click', function(e) {
        const modal = document.getElementById('serverDetailsModal');
        if (modal && e.target === modal) {
            closeServerModal();
        }
    });
    
    // Fermer avec la touche Escape
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            const modal = document.getElementById('serverDetailsModal');
            if (modal && modal.style.display === 'block') {
                closeServerModal();
            }
        }
    });
    
    document.addEventListener('DOMContentLoaded', function() {
        // D√©placer le modal au body pour √©viter les probl√®mes de z-index
        const modal = document.getElementById('serverDetailsModal');
        if (modal && modal.parentElement !== document.body) {
            document.body.appendChild(modal);
        }
        
        // Ajouter les event listeners sur TOUTES les cellules hostname
        // (primary rows ET detail rows)
        const hostnameCells = document.querySelectorAll('.hostname-cell');
        
        hostnameCells.forEach(cell => {
            // Clic droit
            cell.addEventListener('contextmenu', function(e) {
                e.preventDefault();
                
                const row = this.closest('tr');
                const hostname = row.getAttribute('data-hostname');
                
                if (!hostname) return;
                
                // D√©terminer si c'est une row de d√©tail ou primaire
                if (row.classList.contains('detail-row')) {
                    // Row de d√©tail - extraire le num√©ro d'instance
                    const instanceBadge = row.querySelector('.instance-badge');
                    if (instanceBadge) {
                        const badgeText = instanceBadge.textContent.trim();
                        const match = badgeText.match(/^(\d+)\//);
                        if (match) {
                            const instanceNumber = parseInt(match[1]);
                            openServerModal(hostname, instanceNumber);
                            return;
                        }
                    }
                }
                
                // Row primaire ou fallback - vue group√©e
                openServerModal(hostname, null);
            });
            
            // Double-clic (alternative)
            cell.addEventListener('dblclick', function(e) {
                const row = this.closest('tr');
                const hostname = row.getAttribute('data-hostname');
                
                if (!hostname) return;
                
                if (row.classList.contains('detail-row')) {
                    const instanceBadge = row.querySelector('.instance-badge');
                    if (instanceBadge) {
                        const badgeText = instanceBadge.textContent.trim();
                        const match = badgeText.match(/^(\d+)\//);
                        if (match) {
                            const instanceNumber = parseInt(match[1]);
                            openServerModal(hostname, instanceNumber);
                            return;
                        }
                    }
                }
                
                openServerModal(hostname, null);
            });
        });
    });
})();
</script>
