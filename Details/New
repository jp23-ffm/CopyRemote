    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.75);
    z-index: 999999;
    overflow: auto;
    padding: 20px;
    backdrop-filter: blur(3px);
}

.modal-content {
    position: relative;
    background-color: #ffffff;
    max-width: 1400px;
    margin: 30px auto;
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    animation: modalSlideIn 0.25s ease-out;
}

