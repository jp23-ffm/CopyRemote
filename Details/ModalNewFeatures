    padding: 20px;
    backdrop-filter: var(--modal-overlay-blur);
}

.modal-content {
    position: relative;
    background-color: var(--modal-bg);
    max-width: 1400px;
    margin: 30px auto;
    border-radius: 12px;
    box-shadow: var(--modal-shadow);
    animation: modalSlideIn 0.25s ease-out;
}

