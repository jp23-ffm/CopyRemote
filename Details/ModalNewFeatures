    --icon-button-hover-color: #1f2937;
    --icon-button-active-bg: #e5e7eb;
}

[data-theme="dark"] {
    /* Modal overlay */
    --modal-overlay-bg: rgba(0, 0, 0, 0.85);
    
    /* Modal container */
    --modal-bg: #1f2937;
    --modal-border: #374151;
    --modal-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    
    /* Header */
    --modal-header-bg-start: #111827;
    --modal-header-bg-end: #1f2937;
    --modal-header-border: #374151;
    --modal-title-color: #f9fafb;
    --modal-close-color: #9ca3af;
    --modal-close-hover-bg: #374151;
    --modal-close-hover-color: #f9fafb;
    
    /* Badge */
    --modal-badge-bg: #2563eb;
    --modal-badge-color: #ffffff;
    
    /* Body & Scrollbar */
    --modal-scrollbar-track: #374151;
    --modal-scrollbar-thumb: #4b5563;
    --modal-scrollbar-thumb-hover: #6b7280;
    
    /* Category */
    --category-bg: #111827;
    --category-border: #374151;
    --category-title-color: #d1d5db;
    --category-title-border: #4b5563;
    
    /* Detail rows */
    --detail-row-border: #374151;
    --detail-label-color: #9ca3af;
    --detail-value-color: #e5e7eb;
    --detail-value-empty: #6b7280;
    --detail-value-variable: #a78bfa;
    
    /* Buttons/Icons */
    --icon-button-color: #9ca3af;
    --icon-button-hover-bg: #374151;
    --icon-button-hover-color: #f9fafb;
    --icon-button-active-bg: #4b5563;
}

/* ============================================
   MODAL STYLES
   ============================================ */
